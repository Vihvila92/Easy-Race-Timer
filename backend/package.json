{
  "name": "easy-race-timer-backend",
  "version": "0.0.1-alpha",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate:up": "ts-node-dev --transpile-only src/migrate.ts up",
    "migrate:down": "ts-node-dev --transpile-only src/migrate.ts down",
    "migrate:status": "ts-node-dev --transpile-only src/migrate.ts status",
    "migrate:backfill": "ts-node-dev --transpile-only src/migrate.ts backfill",
    "migrate:rebaseline": "ts-node-dev --transpile-only src/migrate.ts rebaseline",
    "migrate:new": "ts-node-dev --transpile-only src/migrate.ts new",
  "migrate:check": "ts-node-dev --transpile-only src/migrate.ts check",
    "seed": "ts-node-dev --transpile-only src/scripts/seed.ts",
  "test": "jest --passWithNoTests",
  "test:unit": "jest --passWithNoTests",
  "test:int": "cross-env JEST_INT=1 DATABASE_URL=postgres://ert:ertpass@localhost:5432/ert_dev APP_ROLE=1 jest --runInBand --passWithNoTests",
  "test:int:ci": "cross-env JEST_INT=1 jest --runInBand --passWithNoTests || (echo 'Retrying failed integration tests once with verbose output...' && cross-env JEST_INT=1 jest --runInBand --verbose --passWithNoTests)",
  "test:coverage": "cross-env JEST_INT=1 jest --coverage --passWithNoTests",
  "test:all": "npm run test:unit && npm run test:int",
  "lint": "eslint 'src/**/*.{ts,js}'",
  "lint:fix": "npm run lint -- --fix",
  "typecheck": "tsc --noEmit -p tsconfig.json",
    "db:up": "docker compose -f ../deployment/docker-compose.dev.yml up -d",
  "db:down": "docker compose -f ../deployment/docker-compose.dev.yml down"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "pg": "^8.11.5",
    "pino": "^9.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest-junit": "^16.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
